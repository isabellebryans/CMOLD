                        sh:declare [ sh:prefix "xs" ;
                                     sh:namespace
                                               "http://www.w3.org/2001/XMLSchema#"^^xs:anyURI ; ]] ;
          sh:select """
        SELECT $this
        WHERE {
            $this :occupiesPosition_t0 ?current ;
                  :occupiesPosition_t1 ?target .
            ?current :row ?row1 ;
                     :colNo ?col1 .
            ?target :row ?row2 ;
