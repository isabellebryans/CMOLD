@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix : <http://example.org/>.
@prefix sh: <http://www.w3.org/ns/shacl#> .

# All fathers and mothers either have a :hasSon path or/and :hasDaughter path
:fatherShape
    a sh:NodeShape ;
    sh:targetClass :father, :mother;
    sh:or ( [
                sh:path :hasSon;
                sh:minCount 1 ;
            ]
            [
                sh:path :hasDaughter;
                sh:minCount 1;
            ]
          ).

# if a node has a son or a daughter, they must be a mother or father
:fatherShape1
    a sh:NodeShape ;
    sh:targetSubjectsOf :hasSon, :hasDaughter;
    sh:or ( [
                sh:path rdf:type ;
                sh:hasValue :mother ;
                sh:minCount 1;
            ]
            [
                sh:path rdf:type ;
                sh:hasValue :father;
                sh:minCount 1;
            ]
          ).





