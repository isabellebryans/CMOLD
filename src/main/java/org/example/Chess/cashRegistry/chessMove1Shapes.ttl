@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xs:   <http://www.w3.org/2001/XMLSchema#> .
@prefix : <http://example.org/chess/>.
@prefix sh: <http://www.w3.org/ns/shacl#>.

# cant use shacl to make sure only one piece moved

# Pawn move
:Move
    a sh:NodeShape ;
    sh:targetSubjectsOf :isIn_t1;
    sh:property [
                sh:path :isIn_t2;
                sh:minCount 1;
                ];
    sh:xor(


           [ sh:node :RookMove ]
           [sh:property :PieceNotMoved ]
         ).

:RookMove
    a sh:NodeShape ;
    sh:class :Rook;
    sh:sparql [
                       a sh:SPARQLConstraint ;
                       sh:prefixes [
                                   sh:declare [
                                                            sh:prefix "ex" ;
                                                            sh:namespace "http://example.org/chess/"^^xs:anyURI ;
                                                        ]
                                   ];
                     sh:select """
            SELECT $this
            WHERE {
                $this :isIn_t1 ?isIn_t1 .
                $this :isIn_t2 ?isIn_t2 .
                ?isIn_t1 :row ?row1 .
                ?isIn_t2 :row ?row2 .
                FILTER (?row1 != ?row2)
            }
        """]
         .


:PieceNotMoved
    a sh:PropertyShape ;
    sh:path :isIn_t1;
    sh:equals :isIn_t2.